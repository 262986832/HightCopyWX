<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<find_item name="colorPrimary">@color/action_bar_color</find_item>-->
        <!--<find_item name="colorPrimaryDark">@color/colorPrimaryDark</find_item>-->
        <!--<find_item name="colorAccent">@color/colorAccent</find_item>-->
        <item name="android:actionBarStyle">@style/WXActionBar</item>
        <item name="android:itemBackground">@drawable/action_bar_item_bg</item>
        <item name="android:itemTextAppearance">@style/WXItemOverflow</item>
    </style>

    <style name="text_subhead_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/text_subhead</item>
    </style>
    
    <style name="WXActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#303537</item>
        <item name="android:titleTextStyle">@style/WXTitleStytle</item>
    </style>

    <style name="WXTitleStytle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#cfcfcf</item>
    </style>

    <style name="WXItemOverflow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:textColor">#cfcfcf</item>
    </style>

</resources>

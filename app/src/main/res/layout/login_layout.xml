<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/def"
            android:id="@+id/register_picture"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/userPhone_line"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:id="@+id/userPhone_tv"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/userPhone_pre"
            android:layout_width="80dp"
            android:layout_height="match_parent" />
        <EditText
            android:maxLength="11"
            android:maxLines="1"
            android:inputType="phone"
            android:id="@+id/userPhone_et"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/userPhone_tv"
            android:hint="@string/userPhone_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/userPassword_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/userPassword_tv"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="@string/userPassword"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/userPassword_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/userPassword_tv"
            android:background="@null"
            android:hint="@string/userPassword_hint"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1" />

    </RelativeLayout>


    <Button
        android:id="@+id/login_bt"
        android:background="@drawable/send_bt_bg"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="@string/login"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/userRegister"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="@string/register"
            android:autoLink="all"
            android:textColor="#000000"
            android:textColorLink="#000000"
            />

        <TextView
            android:id="@+id/userFogetPassword"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="@string/fogetpassword"
            android:autoLink="all"
            android:textColor="#000000"
            android:textColorLink="#000000"
            />
    </RelativeLayout>

</LinearLayout>